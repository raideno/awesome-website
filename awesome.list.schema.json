{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 128
    },
    "description": {
      "type": "string",
      "maxLength": 192
    },
    "author": {
      "type": "string",
      "maxLength": 64
    },
    "thumbnail": {
      "type": "string"
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 128
          },
          "description": {
            "type": "string",
            "maxLength": 192
          },
          "notes": {
            "type": "string"
          },
          "links": {
            "maxItems": 4,
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          },
          "tags": {
            "maxItems": 16,
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "description",
          "tags"
        ],
        "additionalProperties": false
      }
    },
    "links": {
      "maxItems": 4,
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  },
  "required": [
    "title",
    "description",
    "author",
    "elements"
  ],
  "additionalProperties": false
}