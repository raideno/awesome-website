{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 128
    },
    "description": {
      "type": "string",
      "maxLength": 512
    },
    "author": {
      "type": "string",
      "maxLength": 64
    },
    "thumbnail": {
      "type": "string"
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 128
          },
          "description": {
            "type": "string",
            "maxLength": 512
          },
          "links": {
            "maxItems": 4,
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "uri"
                },
                {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "label": {
                      "type": "string",
                      "maxLength": 64
                    }
                  },
                  "required": [
                    "url",
                    "label"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "tags": {
            "maxItems": 16,
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "description",
          "tags"
        ],
        "additionalProperties": false
      }
    },
    "links": {
      "maxItems": 4,
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "format": "uri"
          },
          {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "label": {
                "type": "string",
                "maxLength": 64
              }
            },
            "required": [
              "url",
              "label"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": [
    "title",
    "description",
    "author",
    "elements"
  ],
  "additionalProperties": false
}